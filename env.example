# Database (SQLite for development, PostgreSQL for production)
# For SQLite (development):
DATABASE_URL="file:./dev.db"
# For PostgreSQL (production):
# DATABASE_URL="postgresql://user:password@localhost:5432/vapehero?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379

# SMS Gateway - Kavenegar
KAVENEGAR_API_KEY=your-kavenegar-api-key
KAVENEGAR_OTP_TEMPLATE=vapehero-otp
KAVENEGAR_SENDER=10004346
# Set SMS_TEST_MODE=true to use test codes (1,2,3,4,5) without sending SMS
SMS_TEST_MODE=false

# Cloud Storage (S3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vapehero-uploads

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# Server
PORT=3001
NODE_ENV=development

# CORS
FRONTEND_URL=http://localhost:5173

